@model ProductDto


<form asp-action="Save" method="post">
  <div class="mb-3">
        <label for="ProductName" class="form-label">Product Name</label>
        <input type="text" class="form-control" asp-for="ProductName">
    <span asp-validation-for="ProductName" class="text-danger"></span>
  </div>
    <div class="mb-3">
        <label for="CategoryId" class="form-label">Category</label>
        <select asp-for="CategoryID" asp-items="ViewBag.categories" class="form-control"></select>
    </div>
    <div class="mb-3">
        <label for="SupplierID" class="form-label">Supplier</label>
        <select asp-for="SupplierID" asp-items="ViewBag.suppliers" class="form-control"></select>
    </div>

    <div class="mb-3">
        <label for="QuantityPerUnit" class="form-label">Quantity Per Unit</label>
        <input type="text" class="form-control" asp-for="QuantityPerUnit">
        <span asp-validation-for="QuantityPerUnit" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="UnitPrice" class="form-label">Unit Price</label>
        <input type="text" class="form-control" asp-for="UnitPrice">
        <span asp-validation-for="UnitPrice" class="text-danger"></span>
    </div>


  <button type="submit" class="btn btn-primary">Update</button>
</form>